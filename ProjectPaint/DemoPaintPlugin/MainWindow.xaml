<Window x:Class="DemoPaintPlugin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoPaintPlugin"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <DockPanel LastChildFill="True">
        <StackPanel Name="actionsStackPanel" Orientation="Horizontal" Height="50" DockPanel.Dock="Top">
            <Button x:Name="save" Width="50" Height="35" Click="save_Click" Content="Save"></Button>
            <Button x:Name="load" Width="50" Height="35" Click="load_Click" Content="Load"></Button>
        </StackPanel>
        <Grid>
            <Canvas x:Name="canvas" Background="Gray" Focusable="False" >
            </Canvas>
            <Border Name="border" Background="Transparent" MouseDown="Border_MouseDown" MouseMove="Border_MouseMove" MouseUp="Border_MouseUp">
            </Border>

        </Grid>
        
    </DockPanel>
</Window>
